<?xml version="1.0"?>
<!--
/**
 *
 * @description Page loader handle
 *
 * @author Bina Commerce      <https://www.binacommerce.com>
 * @author C. M. de Picciotto <cmdepicciotto@binacommerce.com>
 *
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <!--
    /**
     *
     * @note Body
     *
     */
    -->
    <body>
        <!--
        /**
         *
         * @note After body start
         *
         */
        -->
        <referenceContainer name="after.body.start">
            <!--
            /**
             *
             * @note Add page loader
             *
             */
            -->
            <block class="Magento\Framework\View\Element\Template" name="page.loader" template="Bina_PageLoader::js/loader.phtml" after="requirejs-config"/>
        </referenceContainer>
    </body>
</page>
